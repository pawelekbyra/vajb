datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  emailVerified  DateTime?
  password       String?
  name           String?
  displayName    String?
  username       String?   @unique
  avatarUrl      String?
  avatar         String?
  image          String?
  bio            String?   // User biography/description
  role           String    @default("user") // "user", "admin", "patron"
  isFirstLogin   Boolean   @default(false) // Flag indicating if the user needs to complete first login setup
  emailConsent   Boolean   @default(false)
  emailLanguage  String?   @default("pl")
  sessionVersion Int       @default(1)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  slides         Slide[]
  comments       Comment[]
  commentLikes   CommentLike[]
  likes          Like[]
  accounts       Account[]
  sessions       Session[]

  // Relations added for completeness and to satisfy Prisma validation
  notificationsReceived Notification[] @relation("UserNotifications")
  notificationsSent     Notification[] @relation("NotificationSender")
  pushSubscriptions     PushSubscription[]

  @@map("users")
  // Index for admin listing or search could be added, but username/email are already unique/indexed.
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Slide {
  id           String    @id @default(cuid())

  // Application Logic Fields (Postgres implementation compatibility)
  userId       String    @map("userId")
  author       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  username     String?   // Denormalized for performance in manual queries

  title        String?
  content      String? // JSON content for flexible schema (video data, etc)

  x            Int       @default(0)
  y            Int       @default(0)
  slideType    String    @default("video")

  // Legacy / Standard Fields (kept for compatibility if needed, or populated via parsing)
  videoUrl     String?
  thumbnailUrl String?

  likeCount    Int       @default(0)
  commentCount Int       @default(0)

  public       Boolean   @default(false)
  accessLevel  AccessLevel @default(PUBLIC)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  comments     Comment[]
  likes        Like[]

  @@map("slides")
  @@index([createdAt(sort: Desc)]) // Optimized for Main Feed (Order By CreatedAt)
  @@index([userId])              // Optimized for Profile Feed (Filter by Author)
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  imageUrl  String?
  authorId  String   @map("userId")
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  slideId   String
  slide     Slide    @relation(fields: [slideId], references: [id])

  // Self-relation for replies
  parentId  String?
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  likes     CommentLike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slideId])   // Optimized for fetching comments for a video
  @@index([parentId])  // Optimized for fetching replies
}

model Like {
  id        String   @id @default(cuid())
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  slideId   String
  slide     Slide    @relation(fields: [slideId], references: [id])
  createdAt DateTime @default(now())

  @@unique([authorId, slideId]) // Ensures 1 user = 1 like per video
  @@index([slideId])            // Optimized for deleting all likes of a video
}

model CommentLike {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, commentId])
  @@index([commentId]) // Optimized for deleting all likes of a comment
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade) // Receiver
  type      String   // 'like', 'comment', 'follow', 'system'
  text      String
  link      String?
  fromUserId String?
  fromUser  User?    @relation("NotificationSender", fields: [fromUserId], references: [id], onDelete: Cascade) // Sender

  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, createdAt(sort: Desc)]) // Optimized for "My Notifications" feed
}

model PushSubscription {
  id               String  @id @default(uuid())
  userId           String?
  user             User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription     Json
  is_pwa_installed Boolean @default(false)

  @@map("push_subscriptions")
}

enum AccessLevel {
  PUBLIC
  SECRET_PATRON
  SECRET_PWA
}
